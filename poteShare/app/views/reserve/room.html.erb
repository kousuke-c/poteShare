    <%= render "shared/error_form" %>
    <div class = 'room'>

    <div class = 'room-left'>
      
     <div class = 'room-image'><%= image_tag @room.image.url%></div>
        
        
        <div class= 'stmi'>
        <%= link_to image_tag("https://presite-potepancamp-rails-02.herokuapp.com/assets/default_icon-9263fc59c414b7228d256fc178dcb22183561357950a68f5ad086ba7ee054974.jpg",class:"mx-3 p-1 host-icon nav-trigger roomss"),"/"%>
        
        
        <div>
        
         <div class= 'rooms aa'><%= @room.title %></div>
        
         <div class= 'rooms aa'><%= @room.area %></div>
        
       </div>
       
       </div>
       <div class ='sstt'>
         
        <div class= 'rooms'><%= @room.comment %></div>
      </div>
       
     
 
  </div>

   
      <div class = 'room-right'>
         <%= form_for @reserve, method: :post, url: reserve_confirm_path(@room) do |f| %>
         
           
             <h3>¥<%= @room.price %>/ 日</h3>
            
     
            <div class='date'>
        <%= f.label :start ,"開始日" %></br>
        <%= f.date_field :start,class:'date-field', min: Date.current%>
       </div>
 
        <div class='date'>
          <%= f.label :end ,"終了日" %></br>
          <%= f.date_field :end,class:'date-field', min: Date.current%></div>
       
        
     <div class='date'>
       <%= f.label :people ,"人数" %></br>
       <%= f.number_field :people,class:'date-field'%></div>
       
       
        <%= f.hidden_field :price,value: @room.price%>
    	<%= f.hidden_field :title ,value: @room.title%>
    	<%= f.hidden_field :area ,value: @room.area%>   	
    	<%= f.hidden_field :comment,value: @room.comment %>
    	<%= f.hidden_field :roomid,value: @room.id%>
         
      
     
	     <div><%= f.submit "予約する",class:'submit' %></div>
       </div>
        
        
<%end%>
 
 </div>