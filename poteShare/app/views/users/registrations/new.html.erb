<div class= 'autline'>
  <div class="inline">
    <p class = 'sign_p'>新しいアカウントを作成</p>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name),method:"post") do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


 <div class="field-sign">
    <div class="col-2 required-b pt-2"></div>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ユーザーネーム"   %>
  </div>

 <div class="field-sign">
    <div class="col-2 required-b pt-2"></div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス"  %>
  </div>

 <div class="field-sign">
   <div class="col-2 required-b pt-2"></div>
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード"  %>
  </div>

  <div class="field-sign">
    <div class="col-2 required-b pt-2"></div>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" , placeholder: "パスワード確認" %>
  </div>

  <div class="actions">
    <%= f.submit "新しいアカウントを作成" %>
  </div>
  
  <div class='sign_link2'>
<%= link_to"既にアカウントをお持ちの方はログイン", new_user_session_path, class: 'sign-link' %>
</div>
<% end %>

</div>
</div>

