<div class= 'autline'>
  <div class="inline">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<p>新しいアカウントを作成</p>

<div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ユーザーネーム"   %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス"  %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード"  %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" , placeholder: "パスワード確認" %>
  </div>

  <div class="actions">
    <%= f.submit "新しいアカウントを作成" %>
  </div>
<% end %>
<%= link_to"既にアカウントをお持ちの方はログイン", new_user_session_path %>
</div>
</div>

